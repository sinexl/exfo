extern "C" func printf(char_ptr, ...): void;
extern "C" func puts(char_ptr): void;

func factorial(n: int): int {
    if n == 0 return 1;
    return n * factorial(n - 1);
}

func fib(n: int): int {
    if n == 0 return 0;
    if n == 1 return 1;

    return fib(n-1) + fib(n-2);

}

func hanoi(n: int): int {
    if n == 1 return 1;
    return 2 * hanoi (n - 1) + 1;
}


